	"scripts": {
		"build": "next build",
		"clean": "rm -rf .next && rm -rf node_modules && rm -rf .swc",
		"dev": "next dev",
		"lint": "next lint --fix --dir .",
		"prepare": "husky",
		"prettier": "npx prettier --write .",
		"start": "next start",
