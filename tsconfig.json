{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/app/*": ["./app/*"],
			"@/components/*": ["./components/*"],
			"@/constants/*": ["./constants/*"],
			"@/css/*": ["./css/*"],
			"@/data/*": ["./data/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/public/*": ["./public/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.js",
		"**/*.ts",
		"**/*.tsx",
		"**/*.json",
		"**/*.md",
		"**/*.mdx",
		"eslint.config.*"
	],
	"exclude": ["node_modules"]
}
